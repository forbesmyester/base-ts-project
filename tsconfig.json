{
    "compilerOptions": {
        "module": "commonjs",
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "lib": ["es6"],
        "removeComments": false,
        "inlineSourceMap": true,
        "declaration": true,
        "target": "es6",
        "outDir": "dist",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}

